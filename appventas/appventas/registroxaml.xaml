<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="appventas.registroxaml" Background="#FDE49C">
    <ContentPage.Content>
        <StackLayout  HorizontalOptions="Center" Spacing="10" WidthRequest="350" Padding="0,10">
            <Image Source="icono_appventa.png" WidthRequest="200"></Image>
            <Label Text="Appventas" FontAttributes="Bold" TextColor="#876445" FontSize="40" HorizontalTextAlignment="Center"></Label>
            <StackLayout Background="#ffff" VerticalOptions="FillAndExpand" Padding="20" Spacing="11">
                <Label Text="Sign In"  FontAttributes="Bold" TextColor="#876445" FontSize="30" HorizontalTextAlignment="Center"></Label>
                <Entry Placeholder="Enter Your Names" PlaceholderColor="#CA965C" FontSize="20" ></Entry>
                <Entry Placeholder="Enter Your Last Names" PlaceholderColor="#CA965C" FontSize="20"></Entry>
                <Entry Placeholder="Enter Your Email" PlaceholderColor="#CA965C" FontSize="20"></Entry>
                <Entry Placeholder="Enter Your Phone" PlaceholderColor="#CA965C" FontSize="20"></Entry>
                <Button Text="Create Account" TextColor="White" FontAttributes="Bold" FontSize="20" Background="#CA965C" CornerRadius="8" ></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>